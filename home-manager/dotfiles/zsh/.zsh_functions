#Make folder and cd into it
function mkcd() {
    if [[ "$1" ]]; then
        mkdir "$1" && cd "$1"
    fi
}

#Git command
function skub() {
    git pull
    git add -A

    if [ "$1" != "" ]; then
        git commit -m "$1"
    else
        git commit -m "."
    fi
    git push
}

